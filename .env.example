# Gemini Antiblock Proxy Configuration

# Upstream Gemini API base URL
UPSTREAM_URL_BASE=https://generativelanguage.googleapis.com

# Maximum number of consecutive retries when stream is interrupted
MAX_CONSECUTIVE_RETRIES=100

# Enable debug logging (true/false)
DEBUG_MODE=true

# Delay between retry attempts in milliseconds
RETRY_DELAY_MS=750

# Whether to swallow thought chunks after retry (true/false)
SWALLOW_THOUGHTS_AFTER_RETRY=true

# Server port
PORT=8080

# HTTP Client Configuration
# HTTP request timeout in seconds
HTTP_TIMEOUT_SECONDS=30

# HTTP idle connection timeout in seconds
HTTP_IDLE_CONN_TIMEOUT_SECONDS=90

# Maximum number of idle connections
HTTP_MAX_IDLE_CONNS=100

# Maximum number of connections per host
HTTP_MAX_CONNS_PER_HOST=10

# JSON buffer size for processing optimization
JSON_BUFFER_SIZE=4096

# Stream Processing Configuration
# SSE buffer size for streaming processing
SSE_BUFFER_SIZE=100
